<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="galleryItem"
            type="com.song2.boostcourse.util.adapter.GalleryRecyclerViewAdapter" />
    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_gallery_item_container"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginRight="8dp">

        <ImageView
            android:id="@+id/iv_gallery_item_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/image1" />

        <ImageView
            android:id="@+id/iv_gallery_item_play_ic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="4dp"
            android:src="@drawable/ic_play_32"
            android:visibility="visible" />

    </RelativeLayout>
</layout>